<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Course Title</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/course.css" rel="stylesheet">
  </head>

  <body>
    <a class="navbar-brand" href="/">Blank</a>
    <!-- Icon tabbar -->
    <div class="tabbar">
      <ul>
        <li class="active"> <a href="#"><span class="glyphicon glyphicon-home"></span></a> </li>
        <li><a href="#"><span class="glyphicon glyphicon-bullhorn"></span></a> </li>
        <li><a href="#"><span class="glyphicon glyphicon-calendar"></span></a> </li>
        <li><a href="#"><span class="glyphicon glyphicon-book"></span></a> </li>
        <li><a href="#"><span class="glyphicon glyphicon-folder-open"></span></a> </li>
      </ul>
    </div>

    <!-- Announcements -->
    <div class="jumbotron">
      <div class="container">
        <h3>{{code}}<small class="pull-right">{{section}}</small>
          <br>
          <small>{{title}}</small>
        <button type="button" class="btn btn-default btn-sm pull-right">Syllabus</button>
        </h3> 
      </div>
    </div>

    <div class="container">
      <div class="panel panel-success">
        <div class="panel-heading"> 
          <span class="glyphicon glyphicon-bullhorn"></span> Announcement
        </div>

        <ul class="list-group">
          {{#each announcements}}
          <li class="list-group-item">
            <small class="text-info">{{time}}</small><br>
            {{title}}
          </li>
          {{/each}}
        </ul>

      </div>
    </div>


    <!-- Important Dates -->
    <div class="container">
      <div class="panel panel-danger">
        <div class="panel-heading"> 
          <span class="glyphicon glyphicon-calendar"></span> Important Dates
        </div>

        <ul class="list-group">
          {{#each dates}}
          <li class="list-group-item">
            <small class="text-info">{{time}}</small><br>
            {{description}}
          </li>
          {{/each}}
       </ul>

      </div>
    </div>

    <!-- Recent Grades -->
    <div class="container">
      <div class="panel panel-warning">
        <div class="panel-heading"> 
          <span class="glyphicon glyphicon-education"></span> Recent Grades
        </div>

        <ul class="list-group">
          {{#each grades}}
          <li class="list-group-item">
            <small class="text-info">Mean: {{mean}}, Std: {{std}}</small><br>
            {{description}} <span class="pull-right">{{score}} / {{total}}</span>
          </li>
          {{/each}}
        </ul>

      </div>
    </div>

    <script src="js/jquery-1.11.0.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>

</html>
