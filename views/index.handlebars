<! doctype html>

<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-widtH, initial-scale=1">
    <title>Home</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="/css/home.css" rel="stylesheet">
  </head>

  <body>
    <a class="navbar-brand" href="/">Blank</a>
    <!-- Icon tabbar -->
    <div class="tabbar">
      <ul>
        <li><a href="#"><span class="glyphicon glyphicon-menu-hamburger"></span></a> </li>
        <li><a href="#"><span class="glyphicon glyphicon-bell"></span></a> </li>
      </ul>
    </div>

    <!-- Upcoming Deadlines -->
    <div class="firstcontainer container">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <span class="glyphicon glyphicon-calendar"></span>  Upcoming Deadlines
        </div>

        <ul class="list-group">
          <li class="list-group-item">
            <p class="text-info">Feb 25, Tuesday</p>
            Homework 1 <span class="pull-right">CSE 100</span>
          </li>
          <li class="list-group-item">
            <p class="text-info">Feb 25, Tuesday</p>
            Homework 3 <span class="pull-right">MATH 189</span>
          </li>
        </ul>

      </div>
    </div>

    <div class="courses container">
      <h5>Courses</h5>
      <ul class="course list-group">
        {{#each courses}}
        <li class="list-group-item">
         <a href="/course/{{id}}">
           {{code}}
            {{#if announcements.length}}
              <span class="badge pull-right">{{announcements.length}}</span>
            {{/if}}
         </a>
        </li>
        {{/each}}
      </ul>
    </div>

    <script src="js/jquery-1.11.0.js"></script>
    <script src="js/bootstrap.js"></script>
  </body>
</html>
